<body class="text-center">
    <form class="form-signin">
        <img class="mb-4" src="https://szok.mini.pw.edu.pl/photos/homenda_wladyslaw.jpg" alt="" width="72" height="72">
        <h1 class="h3 mb-3 font-weight-normal">Register</h1>

        <div class="input-group">
            <div class="input-label">
                <label for="inputName">Name</label>
            </div>
            <div class="input-field">
                <input type="text" id="inputName" class="form-control" placeholder="Name" required autofocus>
            </div>
        </div>

        <div class="input-group">
            <div class="input-label">
                <label for="inputLastName">Last Name</label>
            </div>
            <div class="input-field">
                <input type="text" id="inputLastName" class="form-control" placeholder="Last Name" required>
            </div>
        </div>

        <div class="input-group">
            <div class="input-label">
                <label for="inputEmail">Email address</label>
            </div>
            <div class="input-field">
                <input type="email" id="inputEmail" class="form-control" placeholder="Email address" required>
            </div>
        </div>

        <div class="input-group">
            <div class="input-label">
                <label for="inputPassword">Password</label>
            </div>
            <div class="input-field">
                <input type="password" id="inputPassword" class="form-control" placeholder="Password" required>
            </div>
        </div>

        <div class="input-group">
            <div class="input-label">
                <label for="inputConfirmPassword">Confirm Password</label>
            </div>
            <div class="input-field">
                <input type="password" id="inputConfirmPassword" class="form-control" placeholder="Confirm Password" required>
            </div>
        </div>

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" value="acceptTerms"> I accept the <a href="https://media.licdn.com/dms/image/C4E03AQHPbFmMvso0yg/profile-displayphoto-shrink_800_800/0/1560897456532?e=2147483647&v=beta&t=bllF4GFeIeqNShoC_tmT200Xi9m6162kEY70VSlh4s8" target="_blank">Terms and Conditions
            </label>
        </div>

        <button class="btn btn-lg btn-primary btn-block" type="submit">Register</button>

    </form>
</body>

